{
  "dashboard": {
    "id": null,
    "title": "Port Checker Dashboard",
    "tags": ["port", "connectivity", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Port Availability",
        "type": "stat",
        "targets": [
          {
            "expr": "port_checker_up",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"from": "0", "to": "Down", "text": "Down"},
              {"from": "1", "to": "Up", "text": "Up"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Check Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "port_checker_check_duration_seconds",
            "legendFormat": "Duration",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Availability History",
        "type": "graph",
        "targets": [
          {
            "expr": "port_checker_up",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "host",
          "type": "query",
          "query": "label_values(port_checker_up, host)",
          "refresh": 1,
          "includeAll": true
        }
      ]
    },
    "refresh": "10s"
  },
  "overwrite": false
}