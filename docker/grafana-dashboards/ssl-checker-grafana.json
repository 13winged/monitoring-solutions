{
  "dashboard": {
    "id": null,
    "title": "SSL Certificate Monitoring",
    "tags": ["ssl", "tls", "certificate", "security"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "SSL Certificate Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ssl_certificate_check_result",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"from": "0", "to": "Valid", "text": "Valid"},
              {"from": "1", "to": "Error", "text": "Error"},
              {"from": "2", "to": "Expired", "text": "Expired"},
              {"from": "3", "to": "Warning", "text": "Warning"}
            ],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1},
                {"color": "dark-red", "value": 2},
                {"color": "yellow", "value": 3}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Days Until Expiry",
        "type": "gauge",
        "targets": [
          {
            "expr": "ssl_certificate_expiry_days",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 60}
              ]
            },
            "min": 0,
            "max": 365
          }
        }
      },
      {
        "id": 3,
        "title": "Certificate Expiry Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "ssl_certificate_expiry_days",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Certificate Status History",
        "type": "heatmap",
        "targets": [
          {
            "expr": "ssl_certificate_check_result",
            "legendFormat": "{{host}}:{{port}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "scheme", "scheme": "reds"}
          }
        }
      },
      {
        "id": 5,
        "title": "SSL Check Details",
        "type": "table",
        "targets": [
          {
            "expr": "ssl_certificate_expiry_days",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "ssl_certificate_check_result",
            "format": "table",
            "instant": true,
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "Valid", "color": "green"},
                  "1": {"text": "Error", "color": "red"},
                  "2": {"text": "Expired", "color": "dark-red"},
                  "3": {"text": "Warning", "color": "yellow"}
                },
                "id": "value-mapping"
              }
            ]
          }
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ]
      }
    ],
    "time": {"from": "now-7d", "to": "now"},
    "timepicker": {
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"],
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "host",
          "type": "query",
          "query": "label_values(ssl_certificate_expiry_days, host)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": ".*"
        },
        {
          "name": "port",
          "type": "query",
          "query": "label_values(ssl_certificate_expiry_days{host=~\"$host\"}, port)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": ".*"
        }
      ]
    },
    "refresh": "1m",
    "schemaVersion": 35,
    "style": "dark",
    "version": 1,
    "description": "Dashboard for monitoring SSL/TLS certificate expiration and status"
  },
  "overwrite": false
}